{
  "autoprefixer": {
    "options": {
      "browsers": [
        "last 3 versions"
      ]
    }
  },
  "bower": {
    "target": "bower.json"
  },
  "css": {
    "clean": {
      "options": {
        "keepSpecialComments": 0
      }
    }
  },
  "dest": "dist",
  "js": {
    "target": "plugin.min.js"
  },
  "gulp": {
    "globs": [
      "gulpfile.js"
    ]
  },
  "html": {
    "globs": "src/**/*.html",
    "target": "src/index.html"
  },
  "less": {
    "globs": [
      "src/**/*.less"
    ],
    "target": "plugin.min.css"
  },
  "php": {
    "globs": [
      "src/**/*.php"
    ]
  },
  "ts": {
    "globs": [
      "src/**/*.ts"
    ],
    "lint": {
      "configuration": {
        "rules": {
          "quotemark": [true, "single"]
        }
      },
      "warnings": true
    },
    "options": {
      "allowJs": true,
      "module": "commonjs",
      "target": "es5"
    },
    "target": "src/plugin.ts",
    "typings": {
      "globs": [
        "typings/index.d.ts"
      ],
      "target": "typings.json"
    }
  },
  "wiredep": {
    "options": {
      "directory": "./dist/components",
      "ignorePath": "../dist/"
    },
    "target": "dist/index.html"
  },
  "zip": {
    "globs": [
      "dist/**/*.min.css",
      "dist/**/*.min.js",
      "dist/**/*.php",
      "!**/external/**/*"
    ]
  }
}