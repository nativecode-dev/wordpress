{
  "bower": {
    "target": "bower.json"
  },
  "clean": {
    "globs": [
      "dist",
      "etc",
      "logs",
      "typings"
    ],
    "options": {
      "force": true
    }
  },
  "css": {
    "autoprefixer": {
      "options": {
        "browsers": [
          "last 3 versions"
        ]
      }
    },
    "clean": {
      "options": {
        "keepSpecialComments": 0
      }
    }
  },
  "deployments": {
    "development": {
      "globs": [
        "dist/*.zip"
      ],
      "key": "C:\\Users\\mpham\\dev.nativecode.com-deploy.key",
      "ssh": {
        "host": "dev.nativecode.com",
        "path": "/usr/share/sites/com-nativecode-dev/wp-content/plugins/just-tips",
        "port": 22,
        "username": "root"
      }
    }
  },
  "dist": "dist",
  "js": {
    "target": "plugin.min.js"
  },
  "globs": [
    "bower.json",
    "config.json",
    "gulpfile.js",
    "package.json",
    "typings.json"
  ],
  "html": {
    "globs": "src/**/*.html"
  },
  "less": {
    "globs": [
      "src/**/*.less"
    ],
    "target": "plugin.min.css"
  },
  "logs": {
    "target": "logs"
  },
  "php": {
    "globs": [
      "src/**/*.php"
    ]
  },
  "plugin": {
    "title": {
      "display": "Just Tips",
      "name": "just-tips",
      "package": "Just_Tips"
    }
  },
  "ts": {
    "globs": [
      "src/**/*.ts"
    ],
    "lint": {
      "configuration": {
        "rules": {
          "quotemark": [
            true,
            "single"
          ]
        }
      },
      "warnings": true
    },
    "options": {
      "allowJs": false,
      "module": "commonjs",
      "sourceMap": true,
      "target": "es5"
    },
    "target": [
      "src/**/just-tips-admin.ts",
      "src/**/just-tips-public.ts"
    ],
    "typings": {
      "globs": [
        "typings/index.d.ts"
      ],
      "target": "typings.json"
    }
  },
  "wiredep": {
    "options": {
      "directory": "./dist/components",
      "ignorePath": "../dist/"
    },
    "target": "dist/index.html"
  },
  "zip": {
    "globs": [
      "dist/just-tips.*.zip"
    ],
    "include": [
      "dist/**/*.css",
      "dist/**/*.eot",
      "dist/**/*.gif",
      "dist/**/*.{jpg,jpeg}",
      "dist/**/*.js",
      "dist/**/*.svg",
      "dist/**/*.ttf",
      "dist/**/*.php",
      "dist/**/*.png",
      "dist/**/*.woff",
      "dist/**/*.woff2",
      "!**/example/**/*",
      "!**/external/**/*"
    ]
  }
}