{
  "bower": {
    "target": "bower.json"
  },
  "clean": {
    "globs": [
      "dist",
      "typings"
    ],
    "options": {
      "force": true
    }
  },
  "css": {
    "autoprefixer": {
      "options": {
        "browsers": [
          "last 3 versions"
        ]
      }
    },
    "clean": {
      "options": {
        "keepSpecialComments": 0
      }
    }
  },
  "dist": "dist",
  "js": {
    "target": "plugin.min.js"
  },
  "globs": [
    ".bowerrc",
    ".npmrc",
    "bower.json",
    "config.json",
    "gulpfile.js",
    "package.json",
    "typings.json"
  ],
  "gulp": {
    "globs": [
      "gulpfile.js"
    ]
  },
  "html": {
    "globs": "src/**/*.html"
  },
  "less": {
    "globs": [
      "src/**/*.less"
    ],
    "target": "plugin.min.css"
  },
  "php": {
    "globs": [
      "src/**/*.php"
    ]
  },
  "ts": {
    "globs": [
      "src/admin/js/**/*.ts",
      "src/public/js/**/*.ts"
    ],
    "lint": {
      "configuration": {
        "rules": {
          "quotemark": [
            true,
            "single"
          ]
        }
      },
      "warnings": true
    },
    "options": {
      "allowJs": false,
      "module": "commonjs",
      "target": "es5"
    },
    "target": [
      "src/**/js/*-{admin,public}.ts"
    ],
    "typings": {
      "globs": [
        "typings/index.d.ts"
      ],
      "target": "typings.json"
    }
  },
  "wiredep": {
    "options": {
      "directory": "./dist/components",
      "ignorePath": "../dist/"
    },
    "target": "dist/index.html"
  },
  "zip": {
    "globs": [
      "dist/**/*.min.css",
      "dist/**/*.min.js",
      "dist/**/*.php",
      "!**/external/**/*"
    ]
  }
}